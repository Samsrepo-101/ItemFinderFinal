<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Item Image -->
        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="Item Image"
            tools:ignore="HardcodedText" />

        <!-- Item Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Badges -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/categoryBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronics"
                    android:textSize="10sp"
                    android:textColor="#7C3AED"
                    android:background="@drawable/badge_category"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginEnd="6dp"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/statusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pending"
                    android:textSize="10sp"
                    android:textColor="#D97706"
                    android:background="@drawable/badge_status"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <!-- Item Name -->
            <TextView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue Backpack"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText" />

            <!-- Description -->
            <TextView
                android:id="@+id/itemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue Jansport backpack with laptop inside"
                android:textSize="11sp"
                android:textColor="#6B7280"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_map_pin"
                    android:layout_marginEnd="4dp"
                    app:tint="#9CA3AF" />

                <TextView
                    android:id="@+id/itemLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Library 2nd Floor"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="4dp"
                    app:tint="#9CA3AF" />

                <TextView
                    android:id="@+id/itemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-10-15"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_clock"
                    android:layout_marginEnd="4dp"
                    app:tint="#9CA3AF"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/itemTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:30 PM"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Handed Status -->


        </LinearLayout>

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_trash"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete_item"
            android:layout_gravity="start"
            android:padding="12dp"
            app:tint="#9CA3AF" />

    </LinearLayout>

</androidx.cardview.widget.CardView>