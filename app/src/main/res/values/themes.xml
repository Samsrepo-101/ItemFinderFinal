<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Theme -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#1E3A5F</item>
        <item name="colorPrimaryVariant">#152A45</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#5B7FA6</item>
        <item name="colorSecondaryVariant">#4A6B8A</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorOnSurface">#000000</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#666666</item>
        <item name="android:textColorHint">#999999</item>

        <!-- Card colors -->
        <item name="cardBackgroundColor">#FFFFFF</item>

        <!-- Button colors -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <!-- Custom Button Style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">#1E3A5F</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>